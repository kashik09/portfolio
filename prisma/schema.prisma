// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION MODELS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  role          Role      @default(USER)

  // Theme preferences
  theme         Theme     @default(SYSTEM)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts       Account[]
  sessions       Session[]
  projectRequests ProjectRequest[]

  @@index([email])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// PROJECT REQUEST MODEL
// ============================================

model ProjectRequest {
  id          String        @id @default(cuid())

  // User relation (optional - can be null for non-authenticated requests)
  userId      String?
  user        User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Contact information
  name        String
  email       String
  phone       String?
  company     String?

  // Project details
  projectType ProjectType
  budget      BudgetRange
  timeline    Timeline
  description String        @db.Text

  // Additional details
  requirements String?      @db.Text
  attachments  String[]     // URLs to uploaded files

  // Status tracking
  status      RequestStatus @default(PENDING)
  priority    Priority      @default(MEDIUM)

  // Admin notes
  adminNotes  String?       @db.Text
  assignedTo  String?       // Admin user ID

  // Timestamps
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  respondedAt DateTime?

  @@index([userId])
  @@index([email])
  @@index([status])
  @@index([createdAt])
  @@index([projectType])
  @@map("project_requests")
}

// ============================================
// PORTFOLIO PROJECT MODEL
// ============================================

model Project {
  id          String         @id @default(cuid())

  // SEO & Identification
  slug        String         @unique
  title       String
  description String         @db.Text

  // Categorization
  category    ProjectCategory
  tags        String[]

  // Technical details
  techStack   String[]
  features    String[]

  // Media
  images      String[]       // Array of image URLs
  thumbnail   String?        // Main thumbnail image

  // Links
  githubUrl   String?
  liveUrl     String?
  demoUrl     String?
  caseStudyUrl String?

  // Additional content
  content     String?        @db.Text // Markdown content for detailed case study

  // Metrics
  featured    Boolean        @default(false)
  viewCount   Int            @default(0)
  likeCount   Int            @default(0)

  // Publishing
  published   Boolean        @default(false)
  publishedAt DateTime?

  // Timestamps
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([slug])
  @@index([category])
  @@index([featured])
  @@index([published])
  @@index([createdAt])
  @@map("projects")
}

// ============================================
// ANALYTICS MODEL
// ============================================

model Visit {
  id          String   @id @default(cuid())

  // Page information
  pagePath    String
  pageTitle   String?

  // Visitor information
  visitorId   String   // Anonymous ID or user ID

  // Referrer information
  referrer    String?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?

  // Device & Browser information
  userAgent   String?  @db.Text
  device      String?  // mobile, tablet, desktop
  browser     String?
  os          String?

  // Location (if available)
  country     String?
  city        String?

  // Session information
  sessionId   String?
  duration    Int?     // Time spent on page in seconds

  // Additional metadata
  metadata    Json?    // Flexible field for additional data

  // Timestamp
  timestamp   DateTime @default(now())

  @@index([pagePath])
  @@index([visitorId])
  @@index([timestamp])
  @@index([sessionId])
  @@map("visits")
}

// ============================================
// ENUMS
// ============================================

enum Role {
  USER
  ADMIN
  MODERATOR
}

enum Theme {
  LIGHT
  DARK
  SYSTEM
}

enum ProjectType {
  WEB_APPLICATION
  MOBILE_APPLICATION
  DESKTOP_APPLICATION
  E_COMMERCE
  LANDING_PAGE
  PORTFOLIO
  CUSTOM_SOFTWARE
  API_INTEGRATION
  CONSULTING
  OTHER
}

enum BudgetRange {
  UNDER_1K
  RANGE_1K_5K
  RANGE_5K_10K
  RANGE_10K_25K
  RANGE_25K_50K
  ABOVE_50K
  NOT_SURE
}

enum Timeline {
  URGENT         // Less than 1 month
  SHORT          // 1-3 months
  MEDIUM         // 3-6 months
  LONG           // 6+ months
  FLEXIBLE
}

enum RequestStatus {
  PENDING
  REVIEWING
  IN_PROGRESS
  COMPLETED
  REJECTED
  CANCELLED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ProjectCategory {
  WEB_DEVELOPMENT
  MOBILE_DEVELOPMENT
  UI_UX_DESIGN
  FULL_STACK
  BACKEND
  FRONTEND
  DEVOPS
  DATA_SCIENCE
  MACHINE_LEARNING
  BLOCKCHAIN
  GAME_DEVELOPMENT
  OTHER
}
